<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalFinancialBoardFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/posts_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:gravity="center"
                    android:rowCount="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/expenses_option_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_coins" />

                        <TextView

                            android:id="@+id/expenses_selected_textview"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/category_expenses_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_pie_chart" />

                        <TextView

                            android:id="@+id/category_selected_textview"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/day_wise_expense_option"
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_calendar" />

                        <TextView

                            android:id="@+id/dayview_selected_textview"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/expense_analytics_item"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_stats" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"

                            android:id="@+id/analytics_selected_textview"
                            android:visibility="invisible"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/filter_finance_option_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_sort_24dp" />

                        <TextView
                            android:id="@+id/filter_selected_textview"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:background="@color/black" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/personal_financial_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e6e6e6" />


</LinearLayout>
