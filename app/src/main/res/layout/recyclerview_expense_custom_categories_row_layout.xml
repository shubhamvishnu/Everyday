<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="@color/black"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="6dp"
    android:orientation="horizontal">
    <android.support.v7.widget.AppCompatImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/expense_cat_icon_row"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="fitCenter" />
    <Button
        android:id="@+id/category_name_row_textview"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="category" />
    <android.support.v7.widget.AppCompatImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edit_custom_cat_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_edit_24dp"
        android:scaleType="fitCenter" />
    <android.support.v7.widget.AppCompatImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/delete_custom_cat_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_delete_24dp"
        android:scaleType="fitCenter" />

</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="12dp"
    android:background="#e6e6e6" />

</LinearLayout>