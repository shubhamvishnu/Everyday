<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/notes_view_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date" />

    <TextView
        android:id="@+id/notes_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title" />

    <TextView
        android:id="@+id/notes_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="link" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edit"
        android:id="@+id/edit_notes_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        android:id="@+id/delete_notes_button"/>
</LinearLayout>