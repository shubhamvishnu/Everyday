<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/boards_background"
    android:orientation="vertical"
    android:padding="8dp">

    <Button
        android:id="@+id/boards_title_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="left" />

    <android.support.v7.widget.AppCompatImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/boards_add_member_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:text="+"
        app:srcCompat="@drawable/ic_person_add_24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/boards_view_members_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


</LinearLayout>